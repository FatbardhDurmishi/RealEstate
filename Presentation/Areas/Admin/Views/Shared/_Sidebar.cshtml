@using RealEstate.App.Constants;
@using RealEstate.App.Interfaces;
@inject IUserService userService

<div class="sidebar pe-4 pb-3">
    <nav class="navbar bg-light navbar-light">
        <a href="index.html" class="navbar-brand mx-4 mb-3">
            <h3 class="text-primary">Real Estate</h3>
        </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                <img class="rounded-circle" src="~/theme/img/default-profile-picture.jpg" alt="" style="width: 40px; height: 40px;">
                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
            </div>
            <div class="ms-3">
                <h6 class="mb-0">@userService.GetFullName()</h6>
                <span class="mt-2">@userService.GetUserRole()</span>
            </div>
        </div>
        <div class="navbar-nav w-100">
            <a href="#" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
            @if (userService.GetUserRole() == RoleConstants.Role_Admin || userService.GetUserRole() == RoleConstants.Role_User_Comp)
            {

                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="nav-item nav-link"><i class="nav-icon fas fa-user me-2"></i>Users</a>
            }
            @if (userService.GetUserRole() == RoleConstants.Role_Admin)
            {
                <a asp-area="Admin" asp-controller="PropertyTypes" asp-action="Index" class="nav-item nav-link"><i class="fa fa-layer-group me-2"></i>Property Types</a>
            }
            @if (userService.GetUserRole() == RoleConstants.Role_Admin)
            {
                <a asp-area="Admin" asp-controller="TransactionTypes" asp-action="Index" class="nav-item nav-link"><i class="fa fa-layer-group me-2"></i>Transaction Types</a>
            }
            @if (userService.GetUserRole() == RoleConstants.Role_User_Indi || userService.GetUserRole() == RoleConstants.Role_User_Comp)
            {
                <a asp-area="Company" asp-controller="Properties" asp-action="Index" class="nav-item nav-link"><i class="bi bi-house me-2"></i>My Properties</a>
            }
            <a href="widget.html" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Widgets</a>
            <a href="form.html" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Forms</a>
            <a href="table.html" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Tables</a>
            <a href="chart.html" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Charts</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Pages</a>
                <div class="dropdown-menu bg-transparent border-0">
                    <a href="signin.html" class="dropdown-item">Sign In</a>
                    <a href="signup.html" class="dropdown-item">Sign Up</a>
                    <a href="404.html" class="dropdown-item">404 Error</a>
                    <a href="blank.html" class="dropdown-item">Blank Page</a>
                </div>
            </div>
        </div>
    </nav>
</div>
