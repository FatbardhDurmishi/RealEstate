@using Presentation.Areas.Individual.Models.DashboardViewModels;
@model IEnumerable<Transaction>

<div class="content">
    <partial name="_Navbar" />
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-line fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">@SharedLocalizer["TodaySale"]</p>
                        <h6 class="mb-0">@ViewBag.TodaySale</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-bar fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">@SharedLocalizer["TotalSale"]</p>
                        <h6 class="mb-0">@ViewBag.TotalSales</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-area fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">@SharedLocalizer["ProfitFromRentThisMonth"]</p>
                        <h6 class="mb-0">@ViewBag.RentThisMonth</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-pie fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">@SharedLocalizer["ExpectedProfitFromRentThisYear"]</p>
                        <h6 class="mb-0">@ViewBag.TotalRent</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
