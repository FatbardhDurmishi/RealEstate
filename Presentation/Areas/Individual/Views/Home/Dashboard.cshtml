    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">@SharedLocalizer["RecentTransactions"]</h6>
                <a asp-area="Company" asp-controller="Transaction" asp-action="Index">@SharedLocalizer["SeeAll"]</a>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">@SharedLocalizer["Date"]</th>
                            <th scope="col">@SharedLocalizer["Seller"]</th>
                            <th scope="col">@SharedLocalizer["Buyer"]</th>
                            <th scope="col">@SharedLocalizer["PropertyName"]</th>
                            <th scope="col">@SharedLocalizer["TransactionType"]</th>
                            <th scope="col">@SharedLocalizer["TotalPrice"]</th>
                            @*<th scope="col">Action</th>*@
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.Date</td>
                                <td>@item.Owner.Name</td>
                                <td>@item.Buyer.Name</td>
                                <td>@item.Property.Name</td>
                                <td>@item.TransactionTypeNavigation.Name</td>
                                <td>@item.TotalPrice</td>
                                @*<td><a asp-area="Company" asp-controller="Transaction" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detail</a></td>*@
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
